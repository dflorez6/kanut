<section class="page-wrapper private-wrapper new-wrapper">
  <div class="container-app">

    <!-- Title -->
    <div class="title">
      <div class="row">
        <div class="col s12 m12 l12">
          <h1>
            <% if I18n.locale == :en %>
              Add New User
            <% else %>
              Agregar nuevo usuario
            <% end %>
          </h1>
        </div>
      </div>
    </div>
    <!-- ./Title -->

    <!-- Content -->
    <div class="content">
      <div class="row">
        <div class="col s12 m12 l12">
          <div class="form-wrapper">
            <%= render 'form', user: @user %>
          </div>
        </div>
      </div>

      <div class="row">
        <div class="col s12 m12 l12 center-align">
          <%= link_to 'Back', users_path %>
        </div>
      </div>
    </div>
    <!-- ./Content -->
  </div>
</section>
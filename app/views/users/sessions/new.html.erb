<section class="devise-wrapper">
  <div class="container">

    <!-- Title --->
    <div class="devise-title">
      <div class="row">
        <div class="col s12 m8 l8 offset-m2 offset-l2">
          <h1>
            <% if I18n.locale == :es %>
              Ingresar
            <% else %>
              Log In
            <% end %>
          </h1>
        </div>
      </div>
    </div>
    <!-- ./Title --->

    <!-- Content --->
    <div class="devise-content">
      <div class="row">
        <div class="col s12 m8 l8 offset-m2 offset-l2">

          <div class="row no-margin-bottom">
            <div class="col s12">
              <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: 'form-wrapper' }) do |f| %>
                <%= devise_error_messages! %>

                <div class="input-field">
                  <% if I18n.locale == :es %>
                    <%= f.label :email, 'Correo Electrónico' %><br />
                  <% else %>
                    <%= f.label :email %><br />
                  <% end %>
                  <%= f.email_field :email, id: :email, autofocus: true, class: 'validate' %>
                </div>

                <div class="input-field">
                  <% if I18n.locale == :es %>
                    <%= f.label :password, 'Contraseña' %><br />
                  <% else %>
                    <%= f.label :password %><br />
                  <% end %>
                  <%= f.password_field :password, id: :password, class: 'validate', autocomplete: 'off' %>
                </div>

                <% if devise_mapping.rememberable? -%>
                  <label>
                    <% if I18n.locale == :es %>
                      <%= f.check_box :remember_me %>
                      <span>Recordarme</span>
                    <% else %>
                      <%= f.check_box :remember_me %>
                      <span>Remember Me</span>
                    <% end %>
                  </label>
                <% end -%>

                <div class="center-align btn-wrapper">
                  <!-- Large Screens -->
                  <div class="hide-on-small-only">
                    <% if I18n.locale ==  :es %>
                      <%= f.submit 'Ingresar', class: 'btn btn-large btn-bgt width-50' %>
                    <% else %>
                      <%= f.submit 'Log In', class: 'btn btn-large btn-bgt width-50' %>
                    <% end %>
                  </div>
                  <!-- ./Large Screens -->

                  <!-- Small Screens -->
                  <div class="hide-on-med-and-up">
                    <% if I18n.locale ==  :es %>
                      <%= f.submit 'Ingresar', class: 'btn btn-large btn-bgt width-100-percent' %>
                    <% else %>
                      <%= f.submit 'Log In', class: 'btn btn-large btn-bgt width-100-percent' %>
                    <% end %>
                  </div>
                  <!-- ./Small Screens -->
                </div>

              <% end %>
            </div>
          </div>

          <div class="row">
            <div class="col s12 center-align">
              <%= render "users/shared/links" %>
            </div>
          </div>

        </div>
      </div>
    </div>
    <!-- ./Content --->

  </div>
</section>
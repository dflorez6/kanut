<section class="devise-wrapper">
  <div class="container">

    <!-- Title --->
    <div class="devise-title">
      <div class="row">
        <div class="col s12 m8 l8 offset-m2 offset-l2">
          <h1>
            <% if I18n.locale == :en %>
              Sign up
            <% else %>
              Registro
            <% end %>
          </h1>
        </div>
      </div>
    </div>
    <!-- ./Title --->

    <!-- Content --->
    <div class="devise-content">
      <div class="row">
        <div class="col s12 m8 l8 offset-m2 offset-l2">

          <div class="row no-margin-bottom">
            <div class="col s12">
              <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'form-wrapper' }) do |f| %>
                <%= render "users/shared/error_messages", resource: resource %>

                <div class="input-field">
                  <% if I18n.locale == :en %>
                    <%= f.label :email %><br />
                  <% else %>
                    <%= f.label :email, 'Correo Electrónico' %><br />
                  <% end %>
                  <%= f.email_field :email, id: :email, autofocus: true, class: 'validate' %>
                </div>

                <div class="input-field">
                  <% if I18n.locale == :en %>
                    <%= f.label :password, 'Password (6 characters minimum)' %><br />
                  <% else %>
                    <%= f.label :password, 'Contraseña (6 caracteres mínimo)' %><br />
                  <% end %>
                  <%= f.password_field :password, id: :password, class: 'validate', autocomplete: 'off' %>
                </div>

                <div class="input-field">
                  <% if I18n.locale == :en %>
                    <%= f.label :password_confirmation %><br />
                  <% else %>
                    <%= f.label :password_confirmation, 'Confirmar Contraseña' %><br />
                  <% end %>
                  <%= f.password_field :password_confirmation, id: :password_confirmation, class: 'validate', autocomplete: 'off' %>
                </div>

                <div class="center-align btn-wrapper">
                  <!-- Large Screens -->
                  <div class="hide-on-small-only">
                    <% if I18n.locale ==  :en %>
                      <%= f.submit 'Sign up', class: 'btn btn-large btn-bgt width-50' %>
                    <% else %>
                      <%= f.submit 'Registrarse', class: 'btn btn-large btn-bgt width-50' %>
                    <% end %>
                  </div>
                  <!-- ./Large Screens -->

                  <!-- Small Screens -->
                  <div class="hide-on-med-and-up">
                    <% if I18n.locale ==  :en %>
                      <%= f.submit 'Sign up', class: 'btn btn-large btn-bgt width-100-percent' %>
                    <% else %>
                      <%= f.submit 'Registrarse', class: 'btn btn-large btn-bgt width-100-percent' %>
                    <% end %>
                  </div>
                  <!-- ./Small Screens -->
                </div>

              <% end %>
            </div>
          </div>

          <div class="row">
            <div class="col s12 center-align">
              <%= render "users/shared/links" %>
            </div>
          </div>

        </div>
      </div>
    </div>
    <!-- ./Content --->

  </div>
</section>
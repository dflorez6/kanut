<section class="page-wrapper private-wrapper index-wrapper">
  <div class="container-app">

    <h1>
      <% if I18n.locale == :en %>
        Organizations
      <% else %>
         Organizaciones
      <% end %>
    </h1>

    <table>
      <thead>
      <tr>
        <th>
          <% if I18n.locale == :en %>
            Logo
          <% else %>
            Logo
          <% end %>
        </th>
        <th>
          <% if I18n.locale == :en %>
            Name
          <% else %>
            Nombre
          <% end %>
        </th>
        <th>
          <% if I18n.locale == :en %>
            Email
          <% else %>
            Correo electr√≥nico
          <% end %>
        </th>
        <th colspan="3"></th>
      </tr>
      </thead>

      <tbody>
      <% @organizations.each do |organization| %>
        <tr>
          <td colspan="1"></td>
          <td><%= organization.name %></td>
          <td><%= organization.email %></td>
          <td><%= link_to 'Show', organization %></td>
          <td><%= link_to 'Edit', edit_organization_path(organization) %></td>
          <td><%= link_to 'Destroy', organization, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
      </tbody>
    </table>

    <br>

    <%= link_to 'New Organization', new_organization_path %>

  </div>
</section>
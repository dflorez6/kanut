<section class="page-wrapper private-wrapper index-wrapper">
  <div class="container-app">

    <h1>
      <% if I18n.locale == :en %>
        Administrators
      <% else %>
        Administradores
      <% end %>
    </h1>

    <table>
      <thead>
      <tr>
        <th>
          <% if I18n.locale == :en %>
            Avatar
          <% else %>
            Avatar
          <% end %>
        </th>
        <th>
          <% if I18n.locale == :en %>
            Name
          <% else %>
            Nombre
          <% end %>
        </th>
        <th>
          <% if I18n.locale == :en %>
            Email
          <% else %>
            Correo electr√≥nico
          <% end %>
        </th>
        <th colspan="3"></th>
      </tr>
      </thead>

      <tbody>
      <% @administrators.each do |administrator| %>
        <tr>
          <td colspan="1"></td>
          <td>
            <%= link_to administrator_path(administrator) do %>
              <%= administrator.name %>
            <% end %>
          </td>
          <td><%= administrator.email %></td>
          <td><%= link_to 'Show', administrator %></td>
          <td><%= link_to 'Edit', edit_administrator_path(administrator) %></td>
          <td><%= link_to 'Destroy', administrator, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
      </tbody>
    </table>

    <br>

    <%= link_to 'New Administrator', new_administrator_path %>

  </div>
</section>
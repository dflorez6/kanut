  <li>
    <%= link_to destroy_user_session_path, method: :delete, class: '' do %>
      <i class="fas fa-sign-out-alt"></i>
      <% if I18n.locale == :en %>
        Log out
      <% else %>
        Salir
      <% end %>
    <% end %>
  </li>

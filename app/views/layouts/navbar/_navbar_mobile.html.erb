<div class="nav-wrapper">
  <div class="navbar-wrapper">


    <div class="navbar-logo-wrapper">
      <% if I18n.locale == :en %>
        <%= link_to root_path(locale: 'en'), class: 'brand-logo-text' do %>
          <%= image_tag 'logo.png', alt: 'Kanut Logo', class: 'navbar-logo', id: 'navbarLogo' %>
        <% end %>
      <% else %>
        <%= link_to root_path(locale: 'es'), class: 'brand-logo-text' do %>
          <%= image_tag 'logo.png', alt: 'Kanut Logo', class: 'navbar-logo', id: 'navbarLogo' %>
        <% end %>
      <% end %>
    </div>

    <!-- Navbar Options -->
    <div class="navbar-content-wrapper">

      <ul class="dropdown-trigger-wrapper">
        <li>
          <a class="dropdown-trigger dropdown-trigger-mobile-menu" href="#!" data-target="mobileMenu">
            <i class="material-icons right">menu</i>
          </a>
        </li>
      </ul>

      <ul id="mobileMenu" class="dropdown-content">
        <div class="mobile-menu-wrapper">

          <% if  user_signed_in?%>
            <!-- Private -->
            <li class="">
              <%= link_to destroy_user_session_path, method: :delete, class: '' do %>
                <i class="fas fa-sign-out-alt"></i>
                <% if I18n.locale == :en %>
                  Log out
                <% else %>
                  Salir
                <% end %>
              <% end %>
            </li>
            <!-- ./Private -->
          <% else %>
            <!-- Public -->
            <li class="">
              <% if I18n.locale == :en %>
                <%= link_to 'Home', root_path(locale: 'en') %>
              <% else %>
                <%= link_to 'Inicio', root_path(locale: 'es') %>
              <% end %>
            </li>

            <li class="">
              <% if I18n.locale == :en %>
                <%= link_to 'Features', root_path(locale: 'en') %>
              <% else %>
                <%= link_to 'Producto', root_path(locale: 'es') %>
              <% end %>
            </li>

            <li class="">
              <% if I18n.locale == :en %>
                <%= link_to 'Pricing', root_path(locale: 'en') %>
              <% else %>
                <%= link_to 'Precio', root_path(locale: 'es') %>
              <% end %>
            </li>

            <li class="">
              <% if I18n.locale == :en %>
                <%= link_to 'Contact', root_path(locale: 'en') %>
              <% else %>
                <%= link_to 'Contacto', root_path(locale: 'es') %>
              <% end %>
            </li>

            <li class="">
              <% if I18n.locale == :en %>
                <%= link_to 'Log In', login_path(locale: 'en') %>
              <% else %>
                <%= link_to 'Ingresar', login_path(locale: 'es') %>
              <% end %>
            </li>
            <!-- ./Public -->
          <% end %>

          <!-- Language Selection -->
          <li class="language-link">
            <%= image_tag 'flag-spain.svg', alt: '', class: 'mobile-flag' %>
            <% if I18n.locale == :en %>
              <%= link_to 'Spanish', url_for( params.clone.permit!.merge(locale: 'es', only_path: true)) %>
            <% else %>
              <%= link_to 'Español', url_for( params.clone.permit!.merge(locale: 'es', only_path: true)) %>
            <% end %>
          </li>

          <li class="language-link">
            <%= image_tag 'flag-usa.svg', alt: '', class: 'mobile-flag' %>
            <% if I18n.locale == :en %>
              <%= link_to 'English', url_for( params.clone.permit!.merge(locale: 'en', only_path: true)) %>
            <% else %>
              <%= link_to 'Inglés', url_for( params.clone.permit!.merge(locale: 'en', only_path: true)) %>
            <% end %>
          </li>
          <!-- ./Language Selection -->

        </div>
      </ul>

    </div>
    <!-- ./Navbar Options -->

  </div>
</div>